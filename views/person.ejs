<!DOCTYPE html>
<html>
<head>
    <title><%= name %></title>
    <%- include('partials/header') %>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container-fluid text-center">
        <h1><%= name %></h1>
        <h3>Peliculas actuadas</h3>
        <% if (moviesActor.length === 0) { %>
            <p>No hay resultados.</p>
        <% } else { %>
            <ul class="list-unstyled d-flex flex-column align-items-center">
                <% moviesActor.forEach((movie) => { %>
                    <li class="my-1 p-1 px-3 card text-primary-emphasis border border-primary-subtle bg-primary-subtle rounded-3">
                        <a class="text-center text-decoration-none" href="/pelicula/<%= movie.movie_id %>">
                            <%= movie.title %> (<%= new Date(movie.release_date).getFullYear() %>) - <%= movie.character_name  %>
                        </a>
                    </li>
                <% }); %>
            </ul>
        <% } %>
        <h3>Peliculas dirigidas</h3>
        <% if (moviesDirector.length === 0) { %>
            <p>No hay resultados.</p>
        <% } else { %>
            <ul class="list-unstyled d-flex flex-column align-items-center">
                <% moviesDirector.forEach((movie) => { %>
                    <li class="my-1 p-1 px-3 card text-primary-emphasis border border-primary-subtle bg-primary-subtle rounded-3">
                        <a class="text-center text-decoration-none" href="/pelicula/<%= movie.movie_id %>">
                            <%= movie.title %> (<%= new Date(movie.release_date).getFullYear() %>)
                        </a>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    </div>
</body>
</html>